<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Welcome to Admin Screen"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeTextView"
        android:layout_marginRight="0.0dp"
        android:textStyle="bold"
        android:textAlignment="center" />
    <TextView
        android:text="Please select one of the below options, to modify associated data."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectTextView" />

    <Button
        android:text="Modify Couples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/modifyCouplesButton" />
    <Button
        android:text="Modify Dances"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/modifyDancesButton" />
    <Button
        android:text="Modify Scores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/modifyScoresButton" />
    <Button
        android:text="Return to Main Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/returnToMainMenuButton" />

</LinearLayout>
